{% extends 'base.html.twig' %}

{% block title %} Inventaire d'achat {% endblock %}

{% block stylesheets %}

{% endblock %}
       {% block smenu %}
           <ul class="breadcrumb">
               <li class="breadcrumb-item">
                   <a href="{{ path('dashboard_super_admin') }}">Tableau de bord</a>
               </li>
               <li class="breadcrumb-item">
                   <a href="#">Inventaire</a>
               </li>
               <li class="breadcrumb-item">
                   <span>Liste</span>
               </li>
           </ul>
       {% endblock %}

        {% block content %}

            <div class="element-wrapper">
                <h6 class="element-header">
                    Inventaire d'achat
                </h6>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fa fa-search"></i></span>
                    </div>
                    <select name="selectNumInv" class="form-control js-example-basic-single">
                        <option value="0" selected disabled>Choisir par numéro d'inventaire</option>
                        {% for inv in inventaires %}
                            <option value="{{ inv.id }}">{{ inv.numero }}</option>
                        {% endfor %}

                    </select>
                </div>

                <div class="element-box">
                    <h5 class="form-header">
{#                        Inventaire : <span style="font-size: 25px; font-weight: bold"> {{ lastInv['numero'] }}</span>#}
{#                        <br>#}
{#                        <br>#}
{#                        TOTAL TTC : <span style="font-size: 25px; font-weight: bold"> {{ lastInv['totalTTC'] | number_format(3)}} </span>#}

{#                        <span class="float-right">Date de création : <span style="font-size: 25px; font-weight: bold"> {{ lastInv['createdAt']|date('d/m/Y') }}</span></span>#}
                    </h5>
                    <div class="form-desc">
                    </div>
                    <div class="table-responsive">
                        <!--------------------
                        START - Basic Table
                        -------------------->
                        <table class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>
                                    Réf d'article
                                </th>
                                <th>
                                    Désignation
                                </th>
                                <th>
                                    PU ACHAT NET
                                </th>
                                <th>
                                    PU ACHAT TTC
                                </th>
                                <th class="text-right">
                                    QTE
                                </th>
                                <th class="text-right">
                                    TOTAL TTC
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {%  for ar in lastInv %}
                                <tr>
                                <td>{{ ar['article']['ref'] }}</td>
                                <td>{{ ar['article']['description'] }}</td>
                                <td>{{ ar['prAchatHT']|number_format(3) }}</td>
                                <td>{{ ar['prAchatTTC']|number_format(3)  }}</td>
                                <td>{{ ar['qte'] }}</td>
                                <td>{{ ar['prAchatTTC']|number_format(3)  }}</td>
                                </tr>

                            {% endfor %}



                            </tbody>
                        </table>
                        {{ knp_pagination_render(lastInv) }}

                        <!--------------------
                        END - Basic Table
                        -------------------->
                    </div>
                </div>
            </div>




        {% endblock %}


{% block javascripts %}
    <script>   $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });

    </script>
{% endblock %}