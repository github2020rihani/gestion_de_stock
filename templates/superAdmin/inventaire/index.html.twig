{% extends 'base.html.twig' %}

{% block title %} Inventaire d'achat {% endblock %}

{% block stylesheets %}

{% endblock %}
       {% block smenu %}
           <ul class="breadcrumb">
               <li class="breadcrumb-item">
                   <a href="{{ path('dashboard_super_admin') }}">Tableau de bord</a>
               </li>
               <li class="breadcrumb-item">
                   <a href="#">Inventaire</a>
               </li>
               <li class="breadcrumb-item">
                   <span>Liste</span>
               </li>
           </ul>
       {% endblock %}

        {% block content %}

            <div class="element-wrapper">
                <h6 class="element-header">
                    Inventaire d'achat
                </h6>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1"><i class="fa fa-search"></i></span>
                    </div>
                    <select name="selectNumInv" class="form-control js-example-basic-single input-lg" id="selectNumInv">
                        <option value="0" selected disabled>Choisir par numéro d'inventaire</option>
                        {% for inv in inventaires %}
                            <option value="{{ inv.id }}" {%  if inv.id == inv.id %} selected {% endif %}>{{ inv.numero }}</option>
                        {% endfor %}


                    </select>
                </div>

                <div class="element-box" id="contentInv">
                    <h5 class="form-header">
                        <div class="row">
                            <div class="col-md-4">
                                Inventaire : <span class="numInv"
                                        style="font-size: 25px; font-weight: bold"> {{ inv.numero }}</span>
                                <br>
                                <br>
                                Achat : <span class=""
                                                   style="font-size: 25px; font-weight: bold"> {{ inv.addedBy.firstName}} {{ inv.addedBy.lastName}} </span>
                                <br>
                                <br>
                                TOTAL TTC : <span class="totalTTCInv"
                                        style="font-size: 25px; font-weight: bold"> {{ inv.totalTTC | number_format(3) }} </span>
                            </div>
                            <div class="col-md-4"></div>
                            <div class="col-md-4"><span class="float-right">Date de création : <span
                                            style="font-size: 25px; font-weight: bold"> {{ inv.createdAt|date('d/m/Y') }}</span></span>
                                <br>
                                <br>
                                <button class="btn float-right btn-lg btn-primary ml-5 downloadEcel"><i class="fa fa-file-excel"></i> Excel</button>
                                <button class="btn float-right btn-lg btn-primary downloadInv"><i class="fa fa-print"></i> Imprimer</button>
                            </div>

                        </div>


                    </h5>
                    <div class="form-desc">
                    </div>
                    <div class="table-responsive">
                        <!--------------------
                        START - Basic Table
                        -------------------->
                        <table class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>
                                    Réf d'article
                                </th>
                                <th>
                                    Désignation
                                </th>
                                <th>
                                    PU ACHAT NET
                                </th>
                                <th>
                                    PU ACHAT TTC
                                </th>
                                <th class="">
                                    QTE
                                </th>
                                <th class="">
                                    TOTAL TTC
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for ar in lastInv %}
                                <tr>
                                    <td>{{ ar['article']['ref'] }}</td>
                                    <td>{{ ar['article']['description'] }}</td>
                                    <td>{{ ar['prAchatHT']|number_format(3) }}</td>
                                    <td>{{ ar['prAchatTTC']|number_format(3) }}</td>
                                    <td>{{ ar['qte'] }}</td>
                                    <td>{{ ar['totalTTC']|number_format(3) }}</td>

                                </tr>

                            {% endfor %}
                            <tr>
                                <td colspan="5">    <span style="font-size: 25px; font-weight: bold" class="float-right">  TOTAL TTC :</span></td>
                                <td> <span style="font-size: 25px; font-weight: bold"> {{ inv.totalTTC | number_format(3) }}</span></td>
                            </tr>


                            </tbody>

                        </table>

                        <div class="float-right">
                            {{ knp_pagination_render(lastInv) }}
                        </div>


                        <!--------------------
                        END - Basic Table
                        -------------------->
                    </div>
                </div>
            </div>




        {% endblock %}


{% block javascripts %}
    <script>   $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });

    </script>
    <script src="{{ asset('app/js/superAdmin/inventaire/inventaire.js') }}"></script>
{% endblock %}