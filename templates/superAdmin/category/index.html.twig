{% extends 'base.html.twig' %}

{% block title %} Liste des categories {% endblock %}

{% block stylesheets %}

{% endblock %}
       {% block smenu %}
           <ul class="breadcrumb">
               <li class="breadcrumb-item">
                   <a href="{{ path('dashboard_super_admin') }}">Tableau de bord</a>
               </li>
               <li class="breadcrumb-item">
                   <a href="#">Catégorie</a>
               </li>
               <li class="breadcrumb-item">
                   <span>Liste</span>
               </li>
           </ul>
       {% endblock %}

        {% block content %}

            <div class="element-wrapper">
                <h6 class="element-header">
                    Liste des catégories
                </h6>
                {{ include('default/FlashBag/flashBag.html.twig') }}

                <div class="element-box">
                    <h5 class="form-header">
                        <a href="{{ path('add_category') }}" class="btn btn-primary add-list float-right mb-2"><i
                                    class="las la-plus mr-3"></i>Ajouter une catégorie </a>

                    </h5>

                    <div class="form-desc">

                    </div>


                    <div class="table-responsive">

                        <table id="dataTable1" width="100%" class="table table-striped table-lightfont">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>Code</th>
                                <th>Titre</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Date</th>
                                <th>Code</th>
                                <th>Titre</th>
                                <th>Actions</th>
                            </tr>
                            </tfoot>
                            <tbody class="ligth-body">
                            {% for c in categories %}
                                <tr>
                                    <td>{{ c.createdAt|date('d-m-Y') }}</td>
                                    <td>{{ c.code }}</td>
                                    <td>{{ c.title }}</td>
                                    <td width="5%">
                                        <div class="d-flex align-items-center list-action">
                                            <a class="  btn btn-sm btn-icon btn-success"
                                               data-toggle="tooltip"
                                               data-placement="top" title="" data-original-title="Modifier"
                                               style="color: white"
                                               href="{{ path('edit_category', {id: c.id}) }}"
                                               data-type="add"
                                            >
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="  btn btn-sm btn-icon btn-danger"
                                               data-toggle="tooltip"
                                               data-placement="top" title="" data-original-title="Supprimer"
                                               style="color: white"
                                               onclick=" return confirm('Vous éte sur suprimer cet catégorie')"
                                               href="{{ path('delete_category', {id: c.id}) }}"
                                               data-type="add"
                                            >
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>




        {% endblock %}


{% block javascripts %}

{% endblock %}