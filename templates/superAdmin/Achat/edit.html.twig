{% extends 'base.html.twig' %}

{% block title %} Modifier un achat {% endblock %}

{% block stylesheets %}

{% endblock %}
    {% block smenu %}
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">Tableau de bord</a>
            </li>
            <li class="breadcrumb-item">
                <a href="index.html">achat</a>
            </li>
            <li class="breadcrumb-item">
                <span>Modifier</span>
            </li>
        </ul>
    {% endblock %}
        {% block content %}
            <div class="content-box">
                <div class="row">
                    <div class="col-sm-10 col-xxxl-10">
                        <div class="element-wrapper">
                            <h6 class="element-header">
                                Modifier un  achat
                            </h6>
                            <div class="element-box" style="min-height: 360px" >
                                <form method="post" action="{{ path('edit_achat' , {id: achat['id']}) }}"
                                      class="formEditAchat">
                                    <div class="row">
                                        <div class="col-md-4 mb-3">
                                            <label for="validationCustom01">Fournisseur</label>
                                            <select name="fournisseur" class="form-control js-example-basic-single">
                                                <option value="" selected disabled>Choisir un fournisseur</option>
                                                {% for f in fournisseurs %}
                                                    <option value="{{ f.id }}" {% if achat['fournisseur']['id'] == f.id %} selected {% endif %}>{{ f.nom }} {{ f.prenom }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <label for="validationCustom01">N achat</label>
                                            <input type="text" class="form-control" value="{{ achat['numero'] }}"
                                                   id="validationCustom01" required=""
                                                   name="numero_achat">
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <label for="">Date creation</label>

                                            <input type="date" id="myDate" class="form-control"
                                                   value="{{ achat['createdAt']|date('Y-m-d') }}"
                                                   min="{{ achat['createdAt']|date('d/m/Y') }}
                                                    placeholder="{{ achat['createdAt']|date('d/m/Y') }}" id=""
                                            required=""
                                            name="date_creation">
                                        </div>
                                        <script>

                                        </script>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table table-lightborder">
                                            <thead>
                                            <tr>
                                                <th class="text-center" scope="col" colspan="7">Article</th>
                                                <th class="text-center" scope="col" colspan="2">Vente</th>
                                            </tr>
                                            <tr id="ligne_achat_1">
                                                <th scope="col">#</th>
                                                <th scope="col">Réference</th>
                                                <th scope="col">Désignation</th>
                                                <th scope="col">PU HT Net</th>
                                                <th scope="col">Qte</th>
                                                <th scope="col">TVA (%)</th>
                                                <th scope="col">PU TTC</th>
                                                <th scope="col">Marge (%)</th>
                                                <th scope="col">P.Vente TTC</th>
                                            </tr>
                                            </thead>
                                            <tbody class="tbodyLingeAchat">
                                            <input type="text" hidden value="" name="articleToDelete[]"
                                                   class="articleToDelete">

                                            {% for article in achat['achatArticles'] %}


                                                <tr class="ligne_achat">
                                                    <th scope="row">
                                                        <button class="badge bg-danger mr-2 delete_ligneAchat delete_ligneAchat_{{ loop.index }}"
                                                                data-id_article="{{ article['article']['id'] }}"
                                                                data-toggle="tooltip" type="button"
                                                                title=""><i
                                                                    class="ri-delete-bin-line mr-0"></i></button>
                                                    </th>
                                                    <td>

                                                        <select class="js-example-basic-single selectArticle_{{ loop.index }}"
                                                                name="article[]">

                                                            {% for a in articles %}
                                                                <option value="{{ a.id }}" {% if  article['article']['id'] == a.id %} selected {% endif %}>{{ a.ref }}</option>
                                                            {% endfor %}


                                                        </select>
                                                    </td>
                                                    <td class="descriptionarticle_{{ loop.index }}">{{ article['article']['description'] }}</td>
                                                    <td>
                                                        <input type="text" name="puhtnet[]"
                                                               value="{{ article['puhtnet']|number_format(3) }}"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control puhtnet puhtnet_{{ loop.index }}">
                                                    </td>
                                                    <td>
                                                        <input type="number" min="1" name="qte[]"
                                                               value="{{ article['qte'] }}"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control qte_{{ loop.index }}">

                                                    </td>
                                                    <td>
                                                        <input type="text" value="19" name="tva[]"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control tva_{{ loop.index }}" readonly>

                                                    </td>
                                                    <td>
                                                        <input type="text" name="puttc[]"
                                                               value="{{ article['puttc']|number_format(3) }}"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control  puttc_{{ loop.index }}"
                                                               readonly>

                                                    </td>
                                                    <td>
                                                        <input type="text" name="marge[]"
                                                               value="{{ article['marge']|number_format(2) }}"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control marge_{{ loop.index }}" readonly>

                                                    </td>
                                                    <td>
                                                        <input type="text" name="pventettc[]"
                                                               value="{{ article['pventettc']|number_format(3) }}"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control pventettc pventettc_{{ loop.index }}">

                                                    </td>
                                                </tr>
                                            {% endfor %}

                                            </tbody>


                                        </table>

                                    </div>
                                    <button type="button" class="mt-2 btn btn-primary float-right addLingeAchat"><i
                                                class="fa fa-plus"></i>Autre
                                    </button>

                                    <button type="submit"
                                            class="mt-5 btn btn-primary editAchat w-100"><i class="fa fa-save"></i>Modifier
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2 col-xxxl-2">
                        <!--START - Top Selling Chart-->
                        <div class="element-wrapper">
                            <h6 class="element-header">
                                Top Selling Today
                            </h6>
                            <div class="element-box">
                                <h4 class="card-title">Total HT</h4>
                                <p class="card-text total_ht">{% if achat['totalHT'] %} {{ achat['totalHT'] }} {% else %} 0.000 {% endif %}</p>
                                <h4 class="card-title">Total TVA</h4>
                                <p class="card-text total_tva">{% if achat['totalTVA'] %} {{ achat['totalTVA'] }} {% else %} 0.000 {% endif %}</p>
                                <h4 class="card-title">Timbre</h4>
                                <p class="card-text timbre">{% if achat['timbre'] %} {{ achat['timbre'] }} {% else %} 0.600 {% endif %}</p>
                                <h4 class="card-title">Total TTC</h4>
                                <p class="card-text total_ttc">{% if achat['totalTTC'] %} {{ achat['totalTTC'] }} {% else %} 0.000 {% endif %}</p>
                                <div class="custom-control custom-checkbox custom-control-inline">
                                    <input type="checkbox" class="custom-control-input"
                                           name="fodec" {% if achat['fodec'] %} checked {% endif %}
                                           id="customCheck5">
                                    <label class="custom-control-label"
                                           for="customCheck5">Fodec</label>
                                </div>
                            </div>
                        </div>
                        <!--END - Top Selling Chart-->
                    </div>



                </div>
            </div>

        {% endblock %}


{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });

    </script>
    <script src="{{ asset('app/js/superAdmin/achat/editAchat.js') }}"></script>
{% endblock %}