{% extends 'base.html.twig' %}

{% block title %} Détail d'achat {% endblock %}

{% block stylesheets %}

{% endblock %}
       {% block smenu %}
           <ul class="breadcrumb">
               <li class="breadcrumb-item">
                   <a href="index.html">Tableau de bord</a>
               </li>
               <li class="breadcrumb-item">
                   <a href="index.html">achat</a>
               </li>
               <li class="breadcrumb-item">
                   <span>Détail</span>
               </li>
           </ul>
       {% endblock %}

        {% block content %}
            <div class="content-box">
                <div class="row">
                    <div class="col-sm-9 col-xxxl-9">
                        <div class="element-wrapper">
                            <h6 class="element-header">
                                Informations des articles
                            </h6>
                            <div class="order-box">
                                <div class="order-details-box">
                                    <div class="order-main-info">
                                        <span>Numéro d'achat #</span><strong>{{ achat['numero'] }}</strong>
                                    </div>
                                    <div class="order-sub-info">
                                        <span>Date création</span><strong>{{ achat['createdAt']|date('now') }}</strong>
                                    </div>
                                </div>
                                <div class="order-items-table">
                                    <div class="table-responsive">
                                        <table class="table table-lightborder">
                                            <thead>
                                            <tr>
                                                <th scope="col">Réference</th>
                                                <th scope="col">PU HT Net</th>
                                                <th scope="col">Qte</th>
                                                <th scope="col">TVA (%)</th>
                                                <th scope="col">PU TTC</th>
                                                <th scope="col">Marge (%)</th>
                                                <th scope="col">P.Vente TTC</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for article in achat['achatArticles'] %}


                                                <tr class="ligne_achat">

                                                    <td>
                                                        <div class="product-name">
                                                            {{ article['article']['ref'] }}
                                                        </div>
                                                        <div class="product-details">
                                                            <span></span><strong> {{ article['article']['description'] }}</strong>
                                                        </div>
                                                    </td>

                                                    <td>
                                                        {{ article['puhtnet']|number_format(3) }}
                                                    </td>
                                                    <td>
                                                        {{ article['qte'] }}

                                                    </td>
                                                    <td>
                                                        19

                                                    </td>
                                                    <td>
                                                        {{ article['puttc']|number_format(3) }}

                                                    </td>
                                                    <td>
                                                        {{ article['marge']|number_format(2) }}

                                                    </td>
                                                    <td>
                                                        {{ article['pventettc']|number_format(3) }}

                                                    </td>
                                                </tr>
                                            {% endfor %}

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="order-foot">
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            {#                                            <h5>#}
                                            {#                                                Notes#}
                                            {#                                            </h5>#}
                                            {#                                            <div class="form-group">#}
                                            {#                                                <textarea class="form-control" placeholder="Enter your notes here..."></textarea>#}
                                            {#                                            </div>#}
                                            {#                                            <button class="btn btn-primary">Save Notes</button>#}
                                        </div>
                                        <div class="col-md-5 offset-md-1">
                                            <h5 class="order-section-heading">
                                                Order Summary
                                            </h5>
                                            <div class="order-summary-row">
                                                <div class="order-summary-label">
                                                    <span>Total HT</span>
                                                </div>
                                                <div class="order-summary-value">
                                                    {% if achat['totalHT'] %} {{ achat['totalHT'] }} {% else %} 0.000 {% endif %}
                                                </div>
                                            </div>
                                            <div class="order-summary-row">
                                                <div class="order-summary-label">
                                                    <span>Total TVA</span>
                                                </div>
                                                <div class="order-summary-value">
                                                    {% if achat['totalTVA'] %} {{ achat['totalTVA'] }} {% else %} 0.000 {% endif %}
                                                </div>
                                            </div>
                                            <div class="order-summary-row">
                                                <div class="order-summary-label">
                                                    <span>Timbre</span>
                                                </div>
                                                <div class="order-summary-value">
                                                    {% if achat['timbre'] %} {{ achat['timbre'] }} {% else %} 0.600 {% endif %}
                                                </div>
                                            </div>
                                            <div class="order-summary-row">
                                                <div class="order-summary-label">
                                                    <div class="custom-control custom-checkbox custom-control-inline">
                                                        <input type="checkbox" class="custom-control-input" DISABLED
                                                               name="fodec" {% if achat['fodec'] %} checked {% endif %}
                                                               id="customCheck5">
                                                        <label class="custom-control-label"
                                                               for="customCheck5">Fodec</label>
                                                    </div>                                                </div>



                                            </div>


                                            <div class="order-summary-row as-total">
                                                <div class="order-summary-label">
                                                    <span>Total TTC</span>
                                                </div>
                                                <div class="order-summary-value">
                                                    {% if achat['totalTTC'] %} {{ achat['totalTTC'] }} {% else %} 0.000 {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-sm-3 col-xxxl-3">
                        <!--START - Top Selling Chart-->
                        <div class="element-wrapper">
                            <h6 class="element-header">
                                Information du fournisseur
                            </h6>
                            <div class="ecommerce-customer-info">
                                <div class="ecommerce-customer-main-info">
                                    <div class="ecc-name">
                                        {{ achat['fournisseur']['nom'] }} {{ achat['fournisseur']['prenom'] }}
                                    </div>
                                </div>
                                <div class="ecommerce-customer-sub-info">
                                    <div class="ecc-sub-info-row">
                                        <div class="sub-info-label">
                                            Email
                                        </div>
                                        <div class="sub-info-value">
                                            <a href="#">{{ achat['fournisseur']['email'] }}</a>
                                        </div>
                                    </div>
                                    <div class="ecc-sub-info-row">
                                        <div class="sub-info-label">
                                            Téléphone
                                        </div>
                                        <div class="sub-info-value">
                                            +216 {{ achat['fournisseur']['telephone'] }}
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-content">
                                    <div class="ecc-sub-info-row">
                                        <div class="sub-info-label">
                                            Address
                                        </div>
                                        <div class="sub-info-value">
                                            {{ achat['fournisseur']['adresse'] }}
                                            <br>{{ achat['fournisseur']['adresse'] }}
                                            , {{ achat['fournisseur']['adresse'] }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--END - Top Selling Chart-->
                    </div>
                </div>
            </div>


        {% endblock %}

{% block javascripts %}

{% endblock %}