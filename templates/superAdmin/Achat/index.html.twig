{% extends 'base.html.twig' %}

{% block title %} Liste des achats {% endblock %}

{% block stylesheets %}

{% endblock %}
       {% block smenu %}
           <ul class="breadcrumb">
               <li class="breadcrumb-item">
                   <a href="{{ path('dashboard_super_admin') }}">Tableau de bord</a>
               </li>
               <li class="breadcrumb-item">
                   <a href="#">achats</a>
               </li>
               <li class="breadcrumb-item">
                   <span>Liste</span>
               </li>
           </ul>
       {% endblock %}

        {% block content %}

            <div class="element-wrapper">
                <h6 class="element-header">
                    Liste des achats
                </h6>
                {{ include('default/FlashBag/flashBag.html.twig') }}

                <div class="element-box">
                    <h5 class="form-header">
                        <a href="{{ path('add_achat') }}" class="btn btn-primary add-list float-right mb-2"><i
                                    class="las la-plus mr-3"></i>Ajouter une nouvelle achat </a>

                    </h5>

                    <div class="form-desc">

                    </div>


                    <div class="table-responsive">

                        <table id="dataTable1" width="100%" class="table table-striped table-lightfont tabel_achat">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>Numéro d'achat</th>
                                <th>Ajouter par</th>
                                <th>Nombre d'article</th>
                                <th>Envoyer vers stock</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Date</th>
                                <th>Numéro d'achat</th>
                                <th>Ajouter par</th>
                                <th>Nombre d'article</th>
                                <th>Envoyer vers stock</th>
                                <th>Actions</th>
                            </tr>
                            </tfoot>
                            <tbody class="ligth-body">
                            {% for a in achats %}
                                <tr>
                                    <td>{{ a.createdAt|date('d/m/Y') }}</td>
                                    <td>{{ a.numero }}</td>
                                    <td>{{ a.addedBy.lastName }} {{ a.addedBy.firstname }}</td>
                                    <td>{{ a.achatArticles|length }}
                                        article{% if a.achatArticles|length > 1 %}s{% endif %}</td>
                                    <td id="stocker_achat_{{ a.id }}">
                                        {% if a.stocker %}
                                            <span class="badge badge-success ml-1" style="width: 107px">Stocké</span>
                                        {% else %}
                                            <button type="button" data-id_achat="{{ a.id }}"
                                                    class="btn btn-outline-primary stocker_achat  mt-2">Stoker
                                                l'achat
                                            </button>

                                        {% endif %}
                                    </td>
                                    <td id="btnStocked_{{ a.id }}">



                                        {% if a.stocker %}

                                            <a class="  btn btn-sm btn-icon btn-info"
                                               data-toggle="tooltip"
                                               data-placement="top" title="" data-original-title="Consulter"
                                               style="color: white"
                                               href="{{ path('detail_achat', {id: a.id}) }}"
                                            >
                                                <i class="fa fa-eye"></i>
                                            </a>

                                        {% else %}


                                            <a class="  btn btn-sm btn-icon btn-success"
                                               data-toggle="tooltip"
                                               data-placement="top" title="" data-original-title="Modifier"
                                               style="color: white"
                                               href="{{ path('edit_achat', {id: a.id}) }}"
                                            >
                                                <i class="fa fa-edit"></i>
                                            </a>

                                        {% endif %}
                                    </td>

                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>




        {% endblock %}


{% block javascripts %}
    <script src="{{ asset('app/js/superAdmin/achat/index.js') }}"></script>

{% endblock %}