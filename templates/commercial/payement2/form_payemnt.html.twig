{% extends 'base.html.twig' %}

{% block title %}Process de paiement {% endblock %}

{% block stylesheets %}
    <style>
        .panel {
            text-align: center;
        }

        .button_outer {
            background: #0279f5;
            border-radius: 30px;
            text-align: center;
            display: inline-block;
            transition: .2s;
            position: relative;
            overflow: hidden;
        }

        .button_outer_delete {
            background: #f5023b;
            border-radius: 30px;
            text-align: center;
            display: inline-block;
            transition: .2s;
            position: relative;
            overflow: hidden;
        }

        .btn_upload input {
            position: absolute;
            cursor: pointer;
            opacity: 0;
        }

        .file_uploading {
            width: 100%;
            height: 10px;
            margin-top: 20px;
            background: #ccc;
        }

        .file_uploading_delete {
            width: 100%;
            height: 10px;
            margin-top: 20px;
            background: #ccc;
        }

        .file_uploading_delete .btn_upload {
            display: none;
        }

        .file_uploading .btn_upload {
            display: none;
        }

        .processing_bar {
            position: absolute;
            left: 0;
            top: 0;
            width: 0;
            height: 100%;
            border-radius: 30px;
            background: #0279f5;
            transition: 3s;
        }

        .processing_bar_delete {
            position: absolute;
            left: 0;
            top: 0;
            width: 0;
            height: 100%;
            border-radius: 30px;
            background: #f5023b;
            transition: 3s;
        }

        .file_uploading .processing_bar {
            width: 100%;
        }

        .file_uploading_delete .processing_bar_delete {
            width: 100%;
        }

        .success_box {
            display: none;
            width: 50px;
            height: 50px;
            position: relative;
        }

        .success_box_delete {
            display: none;
            width: 50px;
            height: 50px;
            position: relative;
        }

        /*.success_box:before {content: ''; display: block; width: 9px; height: 18px; border-bottom: 6px solid #fff; border-right: 6px solid #fff; -webkit-transform:rotate(45deg); -moz-transform:rotate(45deg); -ms-transform:rotate(45deg); transform:rotate(45deg); position: absolute; left: 17px; top: 10px;}*/
        .file_uploaded .success_box {
            display: inline-block;
        }

        .file_uploaded {
            margin-top: 0;
            width: 31px;
            background: #39d96a !important;
            height: 30px;
        }

        .dossier_colaborateur, .pd {
            display: none
        }


        .btn_upload {
            padding: 4px 13px 1px;
            color: #fff;
            text-align: center;
            position: relative;
            display: inline-block;
            overflow: hidden;
            z-index: 3;
            white-space: nowrap;
        }
    </style>

{% endblock %}
       {% block smenu %}
           <ul class="breadcrumb">
               <li class="breadcrumb-item">
                   <a href="{{ path('dashboard_personelle') }}">Tableau de bord</a>
               </li>
               <li class="breadcrumb-item">
                   <a href="">Caisse</a>
               </li>
               <li class="breadcrumb-item">
                   <span>paiement</span>
               </li>
           </ul>
       {% endblock %}

        {% block content %}
            <div class="element-box">
                    <div class="steps-w">
                        <div class="step-triggers">
                            <a class="step-trigger active" href="#stepContent1">Importer les Fichiers</a>
                            <a class="step-trigger"   href="#stepContent2">Information</a>
                            <a class="step-trigger" href="#stepContent3">Paiement</a>
                            <a class="step-trigger" href="#stepContent4">Terminer</a>
                        </div>
                        <div class="step-contents">
                            <form action="{{ path('perso_paiement_invoice_part2' , {id: app.request.get('id')}) }}" method="post"  id="formPayement2" >
                                {{ include('commercial/payement2/include/_etape1.html.twig') }}
                                {{ include('commercial/payement2/include/_etape2.html.twig') }}
                                {{ include('commercial/payement2/include/_etape3.html.twig') }}
                                {{ include('commercial/payement2/include/_etape4.html.twig') }}
                            </form>

                        </div>
                    </div>
            </div>



        {% endblock %}

