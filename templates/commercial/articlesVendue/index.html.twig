{% extends 'base.html.twig' %}

{% block title %} Liste des articles vendus {% endblock %}

{% block stylesheets %}

{% endblock %}
       {% block smenu %}
           <ul class="breadcrumb">
               <li class="breadcrumb-item">
                   <a href="{{ path('dashboard_personelle') }}">Tableau de bord</a>
               </li>
               <li class="breadcrumb-item">
                   <a href="#">articles vendus</a>
               </li>
               <li class="breadcrumb-item">
                   <span>Liste</span>
               </li>
           </ul>
       {% endblock %}

        {% block content %}

            <div class="element-wrapper">
                <h6 class="element-header">
                    Liste des articles vendus
                </h6>
                {{ include('default/FlashBag/flashBag.html.twig') }}

                <div class="element-box">
                    <h5 class="form-header">
                    </h5>

                    <div class="form-desc">

                    </div>


                    <div class="table-responsive">

                        <table id="dataTable1" width="100%" class="table table-striped table-lightfont">
                            <thead>
                            <tr>
                                <th>Numéro</th>
                                <th>Heure</th>
                                <th>Client</th>
                                <th>Elaboré par</th>
                                <th>Article</th>
                                <th>Total TTC</th>
                            </tr>
                            </thead>
                            <tfoot>
                            <tr>
                                <th>Numéro</th>
                                <th>Heure</th>
                                <th>Client</th>
                                <th>Elaboré par</th>
                                <th>Article</th>
                                <th>Total TTC</th>
                            </tr>
                            </tfoot>
                            <tbody class="ligth-body">
                            {% for ar in data %}
                                <tr>
                                    <td width="10%">{{ ar['num'] }}</td>
                                    <td width="15%">{{ ar['date']|date('d/m/Y - g:ia') }}</td>
                                    <td width="10%">{{ ar['client'] }}</td>
                                    <td width="10%">{{ ar['addedBy'] }}</td>
                                    <td>
                                        {% for a in ar['articles'] %}

                                            {{ a['name'] }} ===>   {{ a['name'] }} ===>  {{ a['puht'] }} ==>  {{ a['puhtnet'] }} ===>  {{ a['totalht'] }} ==>  {{ a['totalttc'] }}

                                        {% endfor %}

                                    </td>
                                    <td width="5%">
                                            {{ ar['sometotalttc'] }}

                                    </td>
                                </tr>
                            {% endfor %}
                            <tr style="background-color: grey; font-size: 25px; color: white; font-weight: bold">
                                <td colspan="5">
                                    TOTAL TTC(30) - Somme
                                </td>
                                <td>{{totalGlobalTTC }}</td>

                            </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>




        {% endblock %}


{% block javascripts %}

{% endblock %}