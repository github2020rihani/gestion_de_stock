<h5 class="form-header">
    <div class="row">
        <div class="col-md-4">
            Inventaire : <span class="numInv"
                                                  style="font-size: 25px; font-weight: bold"> {{ inv[0]['numero'] }}</span>
            <br>
            <br>
            Achat : <span class=""
                               style="font-size: 25px; font-weight: bold"> {{ inv[0]['addedBy']['firstName'] }} {{ inv[0]['addedBy']['lastName'] }}</span>
            <br>
            <br>
            TOTAL TTC : <span class="totalTTCInv"
                              style="font-size: 25px; font-weight: bold"> {{ inv[0]['totalTTC'] | number_format(3) }} </span>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4"><span class="float-right">Date de création : <span
                        style="font-size: 25px; font-weight: bold"> {{ inv[0]['createdAt']|date('d/m/Y') }}</span></span>
            <br>
            <br>
            <button class="btn float-right btn-lg btn-primary ml-5 downloadEcel "><i class="fa fa-file-excel"></i> Excel</button>
            <button class="btn float-right btn-lg btn-primary downloadInv"><i class="fa fa-print"></i> Imprimer</button>
        </div>
    </div>


</h5>
<div class="form-desc">
</div>
<div class="table-responsive">
    <!--------------------
    START - Basic Table
    -------------------->
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>
                Réf d'article
            </th>
            <th>
                Désignation
            </th>
            <th>
                PU ACHAT NET
            </th>
            <th>
                PU ACHAT TTC
            </th>
            <th class="">
                QTE
            </th>
            <th class="">
                TOTAL TTC
            </th>
        </tr>
        </thead>
        <tbody>
        {% for ar in inv[0]['inventaireArticles'] %}
            <tr>
                <td>{{ ar['article']['ref'] }}</td>
                <td>{{ ar['article']['description'] }}</td>
                <td>{{ ar['prAchatHT']|number_format(3) }}</td>
                <td>{{ ar['prAchatTTC']|number_format(3) }}</td>
                <td>{{ ar['qte'] }}</td>
                <td>{{ ar['totalTTC']|number_format(3) }}</td>

            </tr>

        {% endfor %}
        <tr>
            <td colspan="5"><span style="font-size: 25px; font-weight: bold" class="float-right">  TOTAL TTC :</span>
            </td>
            <td><span style="font-size: 25px; font-weight: bold"> {{ inv[0].totalTTC | number_format(3) }}</span></td>
        </tr>


        </tbody>

    </table>

    <div class="float-right">
        {{ knp_pagination_render(inv) }}
    </div>


    <!--------------------
    END - Basic Table
    -------------------->
</div>