{% extends 'baseLogin.html.twig' %}



 {%  block contentForm %}

     <form method="post" action="{{ path('login') }}" class="needs-validation" novalidate="novalidate" id="formLogin">
         {% if error %}
             <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
         {% endif %}
         <div class="row">
             <div class="col-lg-12">
                 <div class="form-group">
                     <label for="email" class="form-label">Email</label>
                     <input class="floating-input form-control"  name="email" value="{{ last_username }}" type="email" placeholder=" ">
                     <div class="pre-icon os-icon os-icon-user-male-circle"></div>

                     <div class="invalid-feedback">
                         s'il vous plaît entre adresse mail
                     </div>
                 </div>
             </div>
             <div class="col-lg-12">
                 <div class="form-group">
                     <label for="password" class="form-label">Mot de passe</label>
                     <input class="floating-input form-control" name="password" type="password" placeholder=" ">
                     <div class="pre-icon os-icon os-icon-fingerprint"></div>

                     <div class="invalid-feedback">
                         s'il vous plaît entre le mot de passe
                     </div>
                 </div>
                 <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

             </div>
         </div>
         <div class="d-flex justify-content-center">
             <button type="submit" class="btn btn-primary">Se connecter</button>
         </div>


     </form>



 {% endblock %}



