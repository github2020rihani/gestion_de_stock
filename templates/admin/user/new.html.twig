{% extends 'base.html.twig' %}

{% block title %} {%  if user %} Modifier {% else%}  Ajouter {% endif %}un categorie {% endblock %}

{% block stylesheets %}

{% endblock %}

        {% block content %}
            <div class="container-fluid add-form-list">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between">
                                <div class="header-title">
                                    <h4 class="card-title">{%  if user %} Modifier {% else%}  Ajouter {% endif %} Utilisateur</h4>
                                </div>
                            </div>
                            <div class="card-body">
                                {% if not form.vars.valid %}
                                    <div class="alert alert-danger"  role="alert">
                                        {# on affiche en premier les erreurs globales (cas classiques) #}
                                        {% for error in form.vars.errors %}
                                            <li>{{error.message}}</li>
                                        {% endfor %}
                                        {# ainsi que les erreurs concernant chaque champs #}
                                        {% for child in form.children %}
                                            {# si le champ à des erreur #}
                                            {% if child.vars.errors is defined %}
                                                {% for error in child.vars.errors %}
                                                    <p>{{error.message}} </p> {# on ajoute le label du champ devant l'erreur pour plus de précisions. #}
                                                {% endfor %}
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                                {{ form_start(form,{'method': 'post', 'action': path('add_user'),'attr': {'data-toggle': 'validator'}}) }}
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Matricule *</label>
                                            {{ form_widget(form.matricule ,{'attr': {'class' : 'form-control' , 'placeholder': 'Enter matricule'}}) }}

                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Nom *</label>
                                            {{ form_widget(form.lastName , {'attr': {'class' : 'form-control' , 'placeholder': 'Enter nom'}}) }}

                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Prénom *</label>
                                            {{ form_widget(form.firstName , {'attr': {'class' : 'form-control' , 'placeholder': 'Enter prenom'}}) }}

                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>     <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Téléphone *</label>
                                            {{ form_widget(form.phone , {'attr': {'class' : 'form-control' , 'placeholder': 'xxxxxxxx'}}) }}

                                            <div class="help-block with-errors"></div>
                                        </div>
                                        <div class="form-group">
                                            <label>Fonction *</label>
                                            {{ form_widget(form.function , {'attr': {'class' : 'form-control' , 'placeholder': 'Enter fontion'}}) }}
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Email *</label>
                                            {{ form_widget(form.email , {'attr': {'class' : 'form-control' , 'placeholder': 'Enter email valid'}}) }}

                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Departement *</label>
                                            {{ form_widget(form.departemnt ) }}

                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Role *</label>
                                            {{ form_widget(form.roles) }}

                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Mot de passe *</label>
                                            {{ form_widget(form.plainPassword.first , {'attr': {'class' : 'form-control' , 'placeholder': 'Enter mot de passe'}}) }}

                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Confirmr mot de passe *</label>
                                            {{ form_widget(form.plainPassword.second , {'attr': {'class' : 'form-control' , 'placeholder': 'Confirmer mot de passe'}}) }}

                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary mr-2">{%  if user %} Modifier {% else%}  Sauvargarder {% endif %}</button>
                                <button type="reset" class="btn btn-danger">Annuler</button>

                                {{ form_end(form) }}


                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page end  -->
            </div>
        {% endblock %}


