{% extends 'base.html.twig' %}

{% block title %} Modifier un achat {% endblock %}

{% block stylesheets %}
    <style>
        .checkmark {
            position: absolute;
            top: 0;
            left: 0;
            height: 25px;
            width: 25px;
            background-color: #eee;
        }

        /* On mouse-over, add a grey background color */
        .container:hover input ~ .checkmark {
            background-color: #ccc;
        }

        /* When the checkbox is checked, add a blue background */
        .container input:checked ~ .checkmark {
            background-color: #2196F3;
        }

        /* Create the checkmark/indicator (hidden when not checked) */
        .checkmark:after {
            content: "";
            position: absolute;
            display: none;
        }

        /* Show the checkmark when checked */
        .container input:checked ~ .checkmark:after {
            display: block;
        }

        /* Style the checkmark/indicator */
        .container .checkmark:after {
            left: 9px;
            top: 5px;
            width: 5px;
            height: 10px;
            border: solid white;
            border-width: 0 3px 3px 0;
            -webkit-transform: rotate(45deg);
            -ms-transform: rotate(45deg);
            transform: rotate(45deg);
        }
        .container input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
            height: 0;
            width: 0;
        }
    </style>

{% endblock %}
    {% block smenu %}
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('dashboard_achat') }}">Tableau de bord</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('achat_index_achat')}}">achats</a>
            </li>
            <li class="breadcrumb-item">
                <span>Modifier</span>
            </li>
        </ul>
    {% endblock %}
        {% block content %}
            <div class="content-box">
                <div class="row">
                    <div class="col-sm-9 col-xxxl-9">
                        <div class="element-wrapper">
                            <h6 class="element-header">
                                Modifier un  achat
                            </h6>
                            <div class="element-box" style="min-height: 360px" >
                                <form method="post" action="{{ path('achat_edit_achat' , {id: achat['id']}) }}"
                                      class="formEditAchat">
                                    <input type="hidden" class="fodecChecked" name="fodecChecked" value="{% if achat['fodec'] %} true  {% else %} false {% endif %}">

                                    <div class="row">
                                        <div class="col-md-4 mb-3">
                                            <label for="validationCustom01">Fournisseur</label>
                                            <select name="fournisseur" class="form-control fournisseur js-example-basic-single">
                                                <option value="0" selected disabled>Choisir un fournisseur</option>
                                                {% for f in fournisseurs %}
                                                    <option value="{{ f.id }}" {% if achat['fournisseur']['id'] == f.id %} selected {% endif %}>{{ f.nom }} {{ f.prenom }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <label for="validationCustom01">N achat</label>
                                            <input type="text" class="form-control numero_achat" value="{{ achat['numero'] }}"
                                                   id="validationCustom01" required=""
                                                   name="numero_achat">
                                        </div>
                                        <div class="col-md-4 mb-3">
                                            <label for="">Date du création</label>

                                            <input type="date" id="myDate" class="form-control date_creation"
                                                   value="{{ achat['createdAt']|date('Y-m-d') }}"
                                                   min="{{ achat['createdAt']|date('d/m/Y') }}" disabled
                                                    placeholder="{{ achat['createdAt']|date('d/m/Y') }}" id=""
                                            required=""
                                            name="date_creation">
                                        </div>
                                        <script>

                                        </script>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table table-lightborder">
                                            <thead>
                                            <tr>
                                                <th class="text-center" scope="col" colspan="7">Article</th>
                                                <th class="text-center" scope="col" colspan="2">Vente</th>
                                            </tr>
                                            <tr id="ligne_achat_1">
                                                <th scope="col">#</th>
                                                <th scope="col">Réference</th>
                                                <th scope="col">Désignation</th>
                                                <th scope="col">PU HT Net</th>
                                                <th scope="col">Qte</th>
                                                <th scope="col">TVA (%)</th>
                                                <th scope="col">PU TTC</th>
                                                <th scope="col">Marge (%)</th>
                                                <th scope="col">P.Vente TTC</th>
                                            </tr>
                                            </thead>
                                            <tbody class="tbodyLingeAchat">
                                            <input type="text" hidden value="" name="articleToDelete[]"
                                                   class="articleToDelete">

                                            {% for article in achat['achatArticles'] %}


                                                <tr class="ligne_achat">
                                                    <th scope="row">
                                                        <button class="btn btn-danger mr-2 delete_ligneAchat delete_ligneAchat_{{ loop.index }}"
                                                                data-id_article="{{ article['article']['id'] }}"
                                                                data-toggle="tooltip" type="button" data-index="{{ loop.index }}"
                                                                title=""><i
                                                                    class="fa fa-trash"></i></button>
                                                    </th>
                                                    <td>
                                                        <input type="hidden" class="articleAnnuler{{loop.index }}" value="{{ art['article']['id']  }}">

                                                        <select class="js-example-basic-single article selectArticle selectArticle_{{ loop.index }}"
                                                                data-id_index="{{ loop.index }}"
                                                                name="article[]">

                                                            {% for a in articles %}
                                                                <option value="{{ a.id }}" {% if  article['article']['id'] == a.id %} selected {% endif %}>{{ a.ref }}</option>
                                                            {% endfor %}


                                                        </select>
                                                    </td>
                                                    <td class="descriptionarticle_{{ loop.index }}">{{ article['article']['description'] }}</td>
                                                    <td>
                                                        <input type="text" name="puhtnet[]"
                                                               value="{{ article['puhtnet']|number_format(3) }}"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control puhtnet puhtnet_{{ loop.index }}">
                                                    </td>
                                                    <td>
                                                        <input type="number" min="1" name="qte[]"
                                                               value="{{ article['qte'] }}"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control qte qte_{{ loop.index }}">

                                                    </td>
                                                    <td>
                                                        <input type="text" value="19" name="tva[]"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control  tva tva_{{ loop.index }}" readonly>

                                                    </td>
                                                    <td>
                                                        <input type="text" name="puttc[]"
                                                               value="{{ article['puttc']|number_format(3) }}"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control puttc  puttc_{{ loop.index }}"
                                                               readonly>

                                                    </td>
                                                    <td>
                                                        <input type="text" name="marge[]"
                                                               value="{{ article['marge']|number_format(2) }}"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control marge marge_{{ loop.index }}" readonly>

                                                    </td>
                                                    <td>
                                                        <input type="text" name="pventettc[]"
                                                               value="{{ article['pventettc']|number_format(3) }}"
                                                               data-index="{{ loop.index }}"
                                                               class="form-control pventettc pventettc_{{ loop.index }}">

                                                    </td>
                                                </tr>
                                            {% endfor %}

                                            </tbody>


                                        </table>

                                    </div>
                                    <button type="button" class="mt-2 btn btn-primary float-right addLingeAchat"><i
                                                class="fa fa-plus"></i>Autre
                                    </button>

                                    <button type="submit"
                                            class="mt-5 btn btn-primary editAchat w-100"><i class="fa fa-save"></i>Modifier
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-xxxl-3">
                        <!--START - Top Selling Chart-->
                        <div class="element-wrapper">
                            <h6 class="element-header">
                              Total
                            </h6>
                            <div class="element-box" style="background-color: rgba(12,12,12,0.25)">

                                <div class="form-check">
                                    <label class="container"><b style="font-size: 18px">Fodec</b>
                                        <input type="checkbox"  class="fodec" name="fodec" value="" {% if achat['fodec'] %} checked {% endif %}>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <hr>
                                <h4 class="card-title">Total HT</h4>
                                <p class="card-text total_ht">{% if achat['totalHT'] %} {{ achat['totalHT']|number_format(3) }} {% else %} 0.000 {% endif %}</p>
                                <h4 class="card-title">Remise</h4>
                                <p class="card-text remise">0.00</p>
                                <h4 class="card-title">Total TVA</h4>
                                <p class="card-text total_tva">{% if achat['totalTVA'] %} {{ achat['totalTVA'] |number_format(3)}} {% else %} 0.000 {% endif %}</p>
                                <h4 class="card-title">Timbre</h4>
                                <p class="card-text timbre">{% if achat['timbre'] %} {{ achat['timbre']|number_format(3) }} {% else %} 0.600 {% endif %}</p>
                                <h4 class="card-title">Transports</h4>
                                <p class="card-text transport">0.00</p>
                                <hr>
                                <h4 class="card-title">Total TTC</h4>
                                <p class="card-text total_ttc">{% if achat['totalTTC'] %} {{ achat['totalTTC']|number_format(3) }} {% else %} 0.000 {% endif %}</p>

                            </div>
                        </div>
                        <!--END - Top Selling Chart-->
                    </div>



                </div>
            </div>

        {% endblock %}


