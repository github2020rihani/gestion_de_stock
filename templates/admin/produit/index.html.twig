{% extends 'base.html.twig' %}

{% block title %} Liste des produits {% endblock %}

{% block stylesheets %}

{% endblock %}

        {% block content %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                            <div>
                                <h4 class="mb-3">Liste Produits </h4>

                            </div>
                            <a href="{{ path('add_produit') }}" class="btn btn-primary add-list"><i class="las la-plus mr-3"></i>Ajouter Produit  </a>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="table-responsive rounded mb-3">
                            {{ include('default/FlashBag/flashBag.html.twig') }}

                            <table class="data-table table mb-0 tbl-server-info">
                                <thead class="bg-white text-uppercase">
                                <tr class="ligth ligth-data">


                                    <th>Produit</th>
                                    <th>Code </th>
                                    <th>Categorie </th>
                                    <th>Quantite</th>
                                    <th>Prix</th>
                                    <th>Employ√©</th>
                                    <th>Image</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody class="ligth-body">
                                {%  for p in produits %}
                                <tr>
                                    <td>{{ p.designation }}</td>
                                    <td>{{ p.code }}</td>
                                    <td>{{ p.category.title }}</td>
                                    <td>{{ p.quantite }}</td>
                                    <td>{{ p.prixHT }}</td>
                                    <td>{{ p.addedBy }}</td>

                                    <td>
                                    <div class="d-flex align-items-center">
                                        <img src="{{ p.imageName }}" class="img-fluid rounded avatar-50 mr-3">
                                    </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center list-action">
                                            <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit" href="{{path('edit_produit', {id: p.id})}}"><i class="ri-pencil-line mr-0"></i></a>
                                            <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete" href="{{path('delete_produit', {id: p.id})}}"><i class="ri-delete-bin-line mr-0"></i></a>
                                        </div>
                                    </td>

                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Page end  -->
            </div>


        {% endblock %}


{% block javascripts %}

{% endblock %}