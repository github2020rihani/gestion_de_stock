{% extends 'base.html.twig' %}

{% block title %} {%  if categorie %} Modifier {% else%}  Ajouter {% endif %}un categorie {% endblock %}

{% block stylesheets %}

{% endblock %}

        {% block content %}
            <div class="container-fluid add-form-list">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between">
                                <div class="header-title">
                                    <h4 class="card-title">{%  if categorie %} Modifier {% else%}  Ajouter {% endif %} categorie</h4>
                                </div>
                            </div>
                            <div class="card-body">
                                {{ form_start(form,{'method': 'post', 'action': path('add_category'),'attr': {'data-toggle': 'validator'}}) }}
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Titre *</label>
                                            {{ form_widget(form.title ,{'attr': {'class' : 'form-control' , 'placeholder': 'Enter Product Name'}}) }}

                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Code *</label>
                                            {{ form_widget(form.code , {'attr': {'class' : 'form-control' , 'placeholder': 'Enter Code'}}) }}

                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary mr-2">{%  if categorie %} Modifier {% else%}  Sauvargarder {% endif %}</button>
                                <button type="reset" class="btn btn-danger">Annuler</button>

                                {{ form_end(form) }}


                            </div>
                        </div>
                    </div>
                </div>
                <!-- Page end  -->
            </div>
        {% endblock %}


